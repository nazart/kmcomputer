                    if ($this->getPathInfo == $index2['uri']) {
                        $string.= '<li class="active">';
                    } else {
                        $string.= '<li>';
                    }
                    $string.= '<a href="' . $index2['uri'] . '" >' . $index2['label'] . '</a>';
                    $string.= '</li>';
                }
                $string.= '</ul>';
            }
            $string.= '</li>';
        }
