        foreach ($this->listaCategoriasNavigator as $index) {
            if ($this->getPathInfo == $index['uri']) {
                $string.= '<li class="active">';
            } else {
                $string.= '<li>';
            }
            $string.= '<a href="' . $index['uri'] . '" >' . $index['label'] . '</a>';
